<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    <%- include('header') %> 

    <div id="wrapper">

      <!-- Sidebar -->
      <%- include('sidebar') %>
      
      <div id="content-wrapper">

        <div class="container-fluid">



          <div class="row">

            <div class="col-12 col-md-4 mb-3 chart">
              <div class="card-header">
                  <i class="fas fa-chart-bar"></i>
                  Gender of users
              </div>
              <canvas id="myChart" width="100" height="100" data-female="<%= dataGender[0].userCount %>" data-male= "<%= dataGender[1].userCount %>" ></canvas>
            </div>
          

            <div class="col-12 col-md-4 mb-3 chart">
              <div class="card-header">
                <i class="fas fa-dot-circle"></i>
                Numbers of message read and unread 
              </div>
              <canvas id="myChart1" width="100" height="100" data-read="<%= messagesRead %> " data-unread="<%= messagesUnread %> "></canvas>
            </div>

            <div class="col-12 col-md-4 mb-3 chart">
              <div class="card-header">
                <i class="fas fa-chart-pie"></i>
                order shipped and not shipped
              </div>
              <canvas id="chartpie" width="100" height="100" data-payedexp="<%= ordersPayedAndExp %> " data-payednotexp="<%= ordersPayedAndNotExp %>"></canvas>
            </div>

            <div class="col-12 col-md-4 mb-3 chart">
              <div class="card-header">
                <i class="fas fa-chart-line"></i>
              Monthly sales
            </div>
              <canvas id="linechart" width="100" height="100" data-salesbymonth="<%= JSON.stringify(dataSalesByMonth) %> "></canvas>
            </div>
            
          </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright Â© Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

   

    </div>
    <!-- /#wrapper -->

    <!-- Installation de  ChartJS (Data visualisation)  mh -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.min.js "></script>
    <script src="../js/dataviz.js"></script>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <!-- <script src="vendor/chart.js/Chart.min.js"></script> -->


    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
