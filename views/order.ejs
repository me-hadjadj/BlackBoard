<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    <%- include('header') %> 

    <div id="wrapper">

      <!-- Sidebar -->
      <%- include('sidebar') %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-table"></i>
             Detail de la commande</div>
            <div class="card-body">
              <div class="table-responsive">
                <table id="order-info" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <thead>
                      <tr>
                        <th>Date Commande</th>
                        <th>Total</th>
                        <th>Frais de port</th>
                        <th>Payée</th>
                        <th>Date Paiement</th>
                        <th>Expédiée</th>
                        <th>Date Exp</th>
                        <th>Adresse</th>
                        <th>Ville</th>
                        <th>Code postal</th>

                      </tr>
                    </thead>
                  </thead>

                  <tbody>
                    <tr>
                      <td><%= ordersList.date_insert %></td>
                      <td><%= ordersList.total %>€</td>
                      <td><%= ordersList.shipping_cost %>€</td>
                      <td <%if( ordersList.status_payment == 'waiting' ){%>
                        class="status-secondary" 
                        <%}else if( ordersList.status_payment == 'validated' ){%>
                          class="status-success"
                        <%}else if( ordersList.status_payment == 'refused' ){%>
                          class="status-danger"<%}%> ><i class="fas fa-circle"></i></td>
                      <td><% if(ordersList.status_payment == 'validated'){%> <%=   ordersList.date_payment %><% } %></td>
                      <td <%if( ordersList.status_shipment == true ){%>
                        class="status-success" 
                        <%}else if( ordersList.status_shipment == false ){%>
                          class="status-secondary"<%}%> ><i class="fas fa-circle"></i></td>
                      <td><%= ordersList.date_shipment %></td>
                      <td><%= ordersList.delivery_address %></td>
                      <td><%= ordersList.delivery_city %></td>
                      <td><%= ordersList.delivery_zipcode %></td>

                    </tr>

                  </tbody>
                </table>



                <table id="product-list" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Libelle</th>
                      <th>Description</th>
                      <th>Poids</th>
                      <th>Prix</th>
                      <th>Image</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Libelle</th>
                      <th>Description</th>
                      <th>Poids</th>
                      <th>Prix</th>
                      <th>Image</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <!-- <tr>
                      <td>Ninebot by Segway Kickscooter ES2</td>
                      <td>Urbain - Route (8'), Autonomie Jusqu'à 25 km, Vitesse max. 25 km/h</td>
                      <td>12,5kg</td>
                      <td>499€</td>
                      <td><img src="/images/ninebot-segway-kickscooter.jpg"></td>
                    </tr> -->
                    <% for (var i = 0; i < ordersList.articles.length; i++){ %> 
                    <tr>
                      <td><%= ordersList.articles[i].title %></td>
                      <td><%= ordersList.articles[i].description %></td>
                      <td><%= ordersList.articles[i].weight %>kg</td>
                      <td><%= ordersList.articles[i].price %>€</td>
                      <td><img src="/images/<%= ordersList.articles[i].img %>"></td>
                    </tr>
                    <% } %> 
                  </tbody>
                </table>


              </div>
            </div>
          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
